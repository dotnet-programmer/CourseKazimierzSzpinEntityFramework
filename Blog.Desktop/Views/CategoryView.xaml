<Window x:Class="Blog.Desktop.Views.CategoryView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Blog.Desktop.Views"
		mc:Ignorable="d"
		Title="CategoryView"
		Height="350"
		Width="500"
		FontSize="20"
		Name="CategoryWindow">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<Label Content="Nazwa:"
			   Margin="10"
			   VerticalContentAlignment="Center"
			   HorizontalContentAlignment="Right" />
		<TextBox Grid.Column="1"
				 Text="{Binding Category.Name}"
				 Margin="10" />

		<Label Grid.Row="1"
			   Content="Adres Url:"
			   Margin="10"
			   VerticalContentAlignment="Center"
			   HorizontalContentAlignment="Right" />
		<TextBox Grid.Row="1"
				 Grid.Column="1"
				 Text="{Binding Category.Url}"
				 Margin="10" />

		<Label Grid.Row="2"
			   Content="Opis:"
			   Margin="10"
			   VerticalContentAlignment="Center"
			   HorizontalContentAlignment="Right" />
		<TextBox Grid.Row="2"
				 Grid.Column="1"
				 Text="{Binding Category.Description}"
				 Margin="10" />

		<Grid Grid.ColumnSpan="2"
			  Grid.Row="3">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<Button Content="Anuluj"
					Command="{Binding CancelCommand}"
					CommandParameter="{Binding ElementName=CategoryWindow}"
					Margin="10" />

			<Button Grid.Column="1"
					Content="Dodaj"
					Command="{Binding AddCommand}"
					Margin="10" />

			<Button Grid.Column="2"
					Content="Zapisz"
					Command="{Binding SaveCommand}"
					Margin="10" />
		</Grid>
	</Grid>
</Window>